<% include partials/header %>

<div class="container shadow bg-white" style="margin-top: 1%">
    <% for(var i = 0; i < users.length; i++) { %>
        <% if(users[i]._id == app.ownerID) { %>
            <% var user = users[i]; %>


            <h1>Viewing Application for <strong><%=user.username%></strong></h1>
            <hr>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><b>User's Application</b></h5>

                    <label for="age">How old are you?</label>
                    <div class="form-group">
                        <input class="form-control" id="age" type="text" name="age" value="<%=app.age%>" disabled>
                        <small class="form-text text-muted">In years, how old are you?</small>
                    </div>

                    <label for="length">How many hours do you have in Arma 3?</label>
                    <div class="form-group"><input class="form-control" id="length" type="text" name="length" value="<%=app.hours%>" disabled>
                        <small class="form-text text-muted">How many hours do you have in Arma 3?</small>
                    </div>

                    <label for="reason">Why do you want to join the unit?</label>
                    <div class="form-group"><input class="form-control" id="reason" type="text" name="reason" value="<%=app.reason%>" disabled>
                        <small class="form-text text-muted">What is your reason for wanting to join the unit?</small>
                    </div>

                    <label for="findus">How did you find about us?</label>
                    <div class="form-group">
                        <input class="form-control" id="findus" type="text" name="findus" value="<%=app.findUs%>" disabled>
                        <small class="form-text text-muted">Tell us how you find our unit.</small>
                    </div>

                    <label for="profile">Enter your Steam Profile link.</label>
                    <div class="form-group">
                        <input class="form-control" id="profile" type="text" name="profile" value="<%=app.steamProfile%>" disabled>
                        <small class="form-text text-muted">Copy your profile link from your Steam page so we can contact you.</small>
                    </div>

                    <label for="arma3">Do you own a copy of Arma 3?</label>
                    <div class="form-group">
                        <input class="form-control" type="text" id="mic" value="<%=app.game%>" disabled>
                        <small class="form-text text-muted">Do you own a legal and valid copy of Arma 3?</small>
                    </div>

                    <label for="mic">Do you have a functioning microphone?</label>
                    <div class="form-group">
                        <input class="form-control" type="text" id="mic" value="<%=app.microphone%>" disabled>
                        <small class="form-text text-muted">Do you own a functioning microphone?</small>
                    </div>

                    <div class="form-group">
                        <label for="mos">What position do you want in the unit?</label>
                        <input class="form-control" type="text" id="mos" name="mos" value="<%=app.position%>" disabled>
                    </div>
                </div>

            </div>

            <% if(currentUser.role.num === 5) { %>
            <br>
            <h1>Actions</h1>
            <hr>
            <div class="card-deck" style="padding-bottom: 1%; margin-top: 1%; margin-bottom: 1%">
                <div class="card text-center" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Approve</strong></h5>
                        <form action="/opcenter/<%=app._id%>" method="POST">
                            <% if(app.read === "Pending") { %>
                                <div class="form-group"><button class="btn btn-success" style="width: 50%;">Approve</button></div>
                            <% } else { %>
                                <div class="form-group"><button class="btn btn-success" style="width: 50%;" disabled>Approve</button></div>
                            <% } %>
                            <input class="form-control" type="hidden" name="requestType" value="Application">
                            <input class="form-control" type="hidden" name="id" value="<%=app._id%>">
                            <input class="form-control" type="hidden" name="approve" value="1">
                        </form>
                    </div>
                </div>
                <div class="card text-center" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Deny</strong></h5>
                        <form action="/opcenter/<%=app._id%>" method="POST">
                            <% if(app.read === "Pending") { %>
                                <div class="form-group"><button class="btn btn-danger" style="width: 50%;">Deny</button></div>
                            <% } else { %>
                                <div class="form-group"><button class="btn btn-danger" style="width: 50%;" disabled>Deny</button></div>
                            <% } %>
                            <input class="form-control" type="hidden" name="requestType" value="Application">
                            <input class="form-control" type="hidden" name="id" value="<%=app._id%>">
                            <input class="form-control" type="hidden" name="approve" value="0">
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
            <% } %>
    <% } %>
</div>

<% include partials/footer %>

